---
interface Props {
	title: string;
}
const { title } = Astro.props;

import Presentacion from '../components/Presentacion.astro';
import Info from '../components/Info.astro';
import Bento from '../components/Bento.astro';
import Tabla from '../components/Tabla.astro';
import Footer from '../components/footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Aprende y informate sobre el mundo de las criptomonedas con SaberCripto" />
		<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Presentacion />
		<Info />
		<Bento />
		<Tabla />
		<Footer />

	</body>
	<footer>
	</footer>
</html>
<style>
	html{
		background-color: black;
	}
</style>
